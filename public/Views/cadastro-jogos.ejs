<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/style-cadastro-jogo.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="../Controllers/ControllerCadJogos.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <!-- <script type="module" src="../Models/classuser.js"></script> -->
    <title>Low Games</title>

</head>


<body>

    <header>

        <nav class=" navbar navbar-dark" style=" background-color: #3c3154;">

            <div class="container-fluid">
                <div class="container">
                    <a class="navbar-brand" href="/">
                        <img src="../img/logo.png" alt="" width="40" class="d-inline-block align-text-top">
                        Low Games
                    </a>
                </div>
            </div>

        </nav>

    </header>
    <main>
        <div class="container">

            <div class="jogos">


                <form class="formulario" id='cad-jogos' enctype="multipart/form-data" action="/admin/add" method="POST"
                    onsubmit="return controller.checkForm();">


                    <ul type="none">

                        <li> <label>Nome do Jogo: </label> <input type="text" name="nome" id="nome"
                                placeholder="Nome Game"></input></li>
                        <li><label>Capa do Jogo: </label></label><input type="file" accept="image/png, image/jpeg"
                                name="foto" id="foto" required></input>
                        </li>
                        <li><label>Resumo: <textarea name="resumo" id="resumo" cols="84" rows="8"
                                style="resize: none"></textarea></label></li>
                        <!-- <li><label>Nota: </label><input type="number" name="" id="nota" value="10" max="10" min="0"></input> </li> -->
                        <li><button type="submit" id="enviar" class="bntE">Salvar</button>
                        </li>

                    </ul>



                </form>


                <section class="jogo">
                    <ul type="none" id="lista">
                        <% listaJogos.forEach(function(item, index){%>
                            <li>
                                <form id='' action="/admin/remove" method="POST">
                                <button class="remove" type="submit">X</button>
                                <input type="hidden" name="idJogo" value="<%= item._id %>">
                                </form>

                                <button type="button" class="edit" data-bs-toggle="modal" data-bs-target="#exampleModal<%= item._id %>" data-bs-whatever="@getbootstrap"><i class="fas fa-edit"></i></button>

                                <div class="modal fade" id="exampleModal<%= item._id %>" tabindex="-1"  aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Editar jogo</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                    <form onsubmit="return controller.checkModal();"  enctype="multipart/form-data" action="/admin/edit" method="POST">
                                                        <input type="hidden" name="idEd" id="idEd" value="<%= item._id %>">
                                                            <div class="mb-3">
                                                                <label for="recipient-name" class="col-form-label">Nome do Jogo:</label>
                                                                <input type="text" class="form-control" name="nomeEd" id="nomeEd<%= item._id %>" value="<%= item.nome_game %>" >
                                                            </div>
                                                            <div class="mb-3">
                                                                <label>Capa do Jogo: </label>
                                                                <input type="file" accept="image/png, image/jpeg" name="fotoEd" id="fotoEd" required>
                                                                </input>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label for="message-text" class="col-form-label">Resumo:</label>
                                                                <textarea class="form-control" name="resumoEd" id="resumoEd<%= item._id %>" > <%= item.resumo_game %> </textarea>
                                                            </div>
                                                        
                                            </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                            <button type="submit" class="btn btn-primary">Salvar</button>
                                                            

                                                    </form>
                                            
                                            </div>
                                        </div>
                                    </div>
                                </div>

         
                                <img src="../<%= item.foto_game %>" alt="">
                                <h1><%= item.nome_game %></h1>
                                
                                <p> <%= item.resumo_game %></p>
                                <h2>Nota:</h2>
                                <div class="notas"><%= item.nota_game %></div>
                            
                            </li>
                            <%});%>
                    </ul>

                </section>
            </div>
        </div>
    </main>
    
    

    <footer>



    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
        </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous">
        </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous">
        </script>

</body>

</html>