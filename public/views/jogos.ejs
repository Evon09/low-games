<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/style-jogos.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Low Games</title>

</head>

<body>

    <header>

        <header>
            <nav class="navbar navbar-expand-lg navbar-dark" >
                
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">
                        <img src="../../img/logo.png" alt="" width="40" class="d-inline-block align-text-top">
                        Low Games
                    </a>
                  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                      <a class="nav-link active" aria-current="page" href="/">Home</a>

                      <% if (user) { %>
                        <%if(user.adm_user==1){%>
                            <a class="nav-link" href="/admin/cadastro-jogos">Cadastro</a>
                            <%}%>
                        <a class="nav-link" href="/logout">Logout</a>
                        <% } else { %>
                            <a class="nav-link" href="/login">Login</a>
                        <% } %>


                   
                   
                   

                    </div>
                  </div>
                </div>
            </div>
              </nav>
    

    </header>
    <main>
        <div class="container">
            
            <section class="jogo-avaliado">
                <img src="../<%=pagJogo.foto_game %>" alt="">
                <h1><%=pagJogo.nome_game %></h1>
                <p><%=pagJogo.resumo_game %></p>
                <h2>Nota:</h2>
                <div class="notas"><%=pagJogo.nota_game %></div>
            </section>
            

            
            <div class="jogos">

                <%if(!user || postuser !== null){%>
                    <div class="formulario" style="height:30px"></div>
                <%}else{%>
                <div class="formulario">

                    <form action="/add-post" method="post" onsubmit="return controller.checkForm();">
                        <ul type="none">


                            

                            <input type="hidden" name="id_game" id="id_game" value="<%= pagJogo._id %>">
                            


                            <input type="hidden" name="nota_game" id="nota_game" value="<%= pagJogo.nota_game %>">
                            <input type="hidden" name="quantidade" id="quantidade" value="<%= pagJogo.quantidade %>">
                            <input type="hidden" name="notatotal" id="notatotal" value="<%= pagJogo.notaTotal %>">
                            
                            
                            
                            

                            <li><label>Resumo: </label><textarea id="post" name="post" cols="84" rows="8"
                                    style="resize: none"></textarea></li>
                            <li><label>Nota: </label><input type="number" name="nota" id="nota" value="10" max="10" min="0">
                                </input> </li>
                            <li><button type="submit" id="enviar" class="bntE">Publicar</button>
                            </li>

                        </ul>

                    </form>
                    

                </div>
                <%}%>

                <section class="jogo">
                    <ul type="none" id="lista">
              
                        <ul type="none">
                            <% posts.forEach(function(item, index){%>
                                <li>
                                    <%if( item.id_user == postuser ){%>
                                        <form id='' action="/post-remove" method="POST">
                                            <button class="remove" type="submit">X</button>
                                            <input type="hidden" name="postId" value="<%= item._id %>">
                                            <input type="hidden" name="id_game" id="id_game" value="<%= pagJogo._id %>">
                                            <input type="hidden" name="nota" id="nota" value="<%= item.nota %>">
                                        </form>
                                        <%}%>
                                    <h3 class="cool-link"><%= item.nome_user %></h3>
                                    <p> <%= item.post %></p>
                                    <h4>Nota:</h4>
                                    <div class="notas" > <%= item.nota %> </div>
                                    
                                </li>
                            <%});%>
                        </ul>
            
                    </ul>

                </section>
            </div>
        </div>
    </main>

    <footer>



    </footer>

    <script src="../Controller/ControllerPost.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
        </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous">
        </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous">
        </script>

</body>

</html>